{
  "name": "algogo",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild:algogo": "rm -rf ./dist/apps/algogo",
    "prebuild:crawler": "rm -rf ./dist/apps/crawler",
    "prebuild:compiler": "rm -rf ./dist/apps/compiler",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "dev": "NODE_ENV=development nest start --watch",
    "build:algogo": "pnpm prebuild:algogo && nest build algogo",
    "dev:algogo": "pnpm prebuild:algogo && NODE_ENV=development nest start algogo --watch",
    "dev:compiler": "pnpm prebuild:compiler && NODE_ENV=development nest start compiler --watch",
    "dev:crawler": "pnpm prebuild:crawler && NODE_ENV=development nest start crawler --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/algogo/main",
    "prisma:generate": "npx prisma generate --schema=./libs/shared-prisma/prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema=./libs/shared-prisma/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=./libs/shared-prisma/prisma/schema.prisma",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/algogo/test/jest-e2e.json",
    "test:crawler:e2e": "jest --config ./apps/crawler/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.14.0",
    "joi": "^17.13.2",
    "node-html-parser": "^6.1.13",
    "prisma": "^5.14.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.3.8",
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axios": "link:@types/@nestjs/axios",
    "config": "link:@types/@nestjs/config",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}